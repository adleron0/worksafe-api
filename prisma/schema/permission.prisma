// Tabela Permission
model Permission {
  id          Int               @id @default(autoincrement())
  name        String            @unique
  description String?           @db.VarChar(255)
  group       String?           @db.VarChar(255)
  
  rolePermissions RolePermission[]  // Relacionamento com RolePermission
  userPermissions UserPermission[]  // Relacionamento com UserPermission

  createdAt   DateTime          @default(now())
}
