// Tabela Course
model CourseClassExam {
  id                   Int         @id @default(autoincrement())
  traineeId            Int
  trainee              Trainee     @relation(fields: [traineeId], references: [id])
  courseId             Int
  course               Course      @relation(fields: [courseId], references: [id])
  classId              Int
  class                CourseClass @relation(fields: [classId], references: [id])
  showOnWebsiteConsent Boolean     @default(true)
  examResponses        Json
  result               Boolean
  companyId            Int

  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @default(now()) @updatedAt
  inactiveAt DateTime?

  // ÍNDICES ÚTEIS
  @@index([traineeId, courseId])          // Provas do aluno por curso
  @@index([classId, result])              // Taxa de aprovação por turma
  @@index([companyId, createdAt])         // Relatórios temporais
}
