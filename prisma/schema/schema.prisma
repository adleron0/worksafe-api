generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URI")
}

// tipos de gateways
enum gateways {
  asaas
  stripe
  efi
  mercadoPago
  pagSeguro
  paypal
}

enum paymentMethods {
  cartaoCredito
  boleto
  pix
}

enum financialRecordsStatus {
  processing
  waiting
  received
  declined
  chargeback
  cancelled
  overdue
}

enum ContentType {
  VIDEO
  TEXT
  QUIZ
}

enum LessonProgressStatus {
  NOT_STARTED
  IN_PROGRESS
  COMPLETED
}

enum periodClassTypes {
  LIMITED
  UNLIMITED
}

enum periodSubscriptionsTypes {
  LIMITED
  UNLIMITED
}

enum sellerStatusTypes {
  PENDING
  ACTIVE
  SUSPENDED
  BLOCKED
}

// Enum para tipo de desconto
enum DiscountType {
  percentage  // Porcentagem
  fixed       // Valor fixo
}

// Enum para tipo de comissão
enum CommissionType {
  percentage  // Porcentagem sobre o valor
  fixed       // Valor fixo por venda
}

enum SplitStatus {
  PENDING          // Aguardando pagamento
  PROCESSING       // Processando no gateway
  CONFIRMED        // Split confirmado
  SETTLED          // Liquidado (disponível para saque)
  WITHDRAWN        // Sacado pelo seller
  FAILED           // Falhou
  CANCELLED        // Cancelado
  REFUNDED         // Estornado
  BLOCKED          // Bloqueado por divergência
}