generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URI")
}

// tipos de gateways
enum gateways {
  asaas
  stripe
  efi
  mercadoPago
  pagSeguro
  paypal
}

enum paymentMethods {
  cartaoCredito
  boleto
  pix
}

enum financialRecordsStatus {
  processing
  waiting
  received
  declined
  chargeback
  cancelled
  overdue
}

enum ContentType {
  VIDEO
  TEXT
  QUIZ
}

enum LessonProgressStatus {
  NOT_STARTED
  IN_PROGRESS
  COMPLETED
}

enum periodClassTypes {
  LIMITED
  UNLIMITED
}

enum periodSubscriptionsTypes {
  LIMITED
  UNLIMITED
}