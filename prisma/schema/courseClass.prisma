model CourseClass {
  id       Int       @id @default(autoincrement())
  name     String    @db.VarChar(100)
  companyId Int?
  customerId Int? 
  customer   Customer?   @relation(fields: [customerId], references: [id])
  courseId Int
  course   Course   @relation(fields: [courseId], references: [id])
  classCode String? @db.VarChar(50)
  price         Decimal?   @db.Decimal(18, 2)
  oldPrice      Decimal?   @db.Decimal(18, 2)
  hoursDuration Int?
  openClass     Boolean?   @default(false)
  gifts String?
  description String?
  gradeTheory  String?
  gradePracticle String?
  imageUrl String? @db.VarChar(255)
  videoUrl String? @db.VarChar(255)
  videoTitle String?
  videoSubtitle String?
  videoDescription String?
  active Boolean @default(true)
  faq Json?
  initialDate DateTime?
  finalDate DateTime?
  landingPagesDates String?
  allowExam Boolean
  allowReview Boolean
  minimumQuorum Int?
  maxSubscriptions Int?

  certificates TraineeCourseCertificate[]
  exams CourseClassExam[]
  instructors CourseClassInstructor[]
  reviews CourseReview[]
  subscriptions CourseClassSubscription[]

  createdAt DateTime  @default(now())
  updatedAt DateTime  @default(now()) @updatedAt
  inactiveAt DateTime?
}
