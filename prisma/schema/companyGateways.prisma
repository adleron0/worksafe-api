// Tabela Company
model CompanyGateWays {
  id        Int      @id @default(autoincrement())
  companyId Int
  company   Company  @relation(fields: [companyId], references: [id])
  gateway   gateways
  payload   Json?    @map("payload") @db.JsonB // Dados do payload do gateway
  active    Boolean  @default(true) // Novo campo booleano para status de ativo

  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @default(now()) @updatedAt
  inactiveAt DateTime?
}
