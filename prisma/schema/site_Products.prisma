// Tabela Site_Products
model Site_Products {
  id            Int       @id @default(autoincrement())
  companyId     Int
  name          String    @db.VarChar(255)
  featured      Boolean?   @default(false)  // Novo campo booleano para status de ativo/inativo
  imageUrl      String?   @db.VarChar(255)
  price         Decimal?   @db.Decimal(18, 2)
  oldPrice      Decimal?   @db.Decimal(18, 2)
  description   String?    @db.VarChar(255)
  features      String?   @db.VarChar(255)
  active        Boolean   @default(true)  // Novo campo booleano para status de ativo/inativo

  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @default(now()) @updatedAt
  inactiveAt    DateTime?
}
